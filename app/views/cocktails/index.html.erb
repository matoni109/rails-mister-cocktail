<div class="container mx-auto py-3">
  <div class="row mx-auto justify-content-around py-5">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4 py-1">
        <div class="card" style="width: 100%;">
          <img class="card-img-top" src="https://source.unsplash.com/random/600x300" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">
              <%= cocktail.name %>
            </h5>
            <p class="card-text">
              <i class="fas fa-dollar-sign"></i>
              <%= cocktail.id %>
            </p>
            <%= link_to "More Info", cocktail_path(cocktail) , class: "btn btn-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>